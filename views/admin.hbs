<html>
  <head>
    <meta charset='utf-8' />
    <title>Shorttpd - Admin Page</title>
    <link rel='stylesheet' href='https://www.w3schools.com/w3css/4/w3.css' />
  </head>
  <body>

    <!-- Links (sit on top) -->
    <header style='position: fixed; top: 0; width: 100%; height: 54.5px;'>
      <div class='w3-top'>
        <div
          class='w3-row w3-padding w3-black'
          style='display: flex; width: 100%; justify-content: space-between;'
        >
          <div class='w3-col s3'>
            <span
              class='w3-button w3-block w3-black'
              onclick='showAddUserDialog()'
            >ADD USER</span>
          </div>
          <div class='w3-col s3'>
            <span
              class='w3-button w3-block w3-black'
              onclick='logoutAdminPage()'
            >LOGOUT</span>
          </div>
        </div>
      </div>
    </header>

    <div class='w3-container' style='margin-top: 55px;'>
      <h2>User List</h2>

      <ul class='w3-ul w3-card-4'>
        {{#data.user_list}}
          <li class='w3-bar'>
            <span
              onclick="this.parentElement.style.display='none'"
              class='w3-bar-item w3-button w3-white w3-xlarge w3-right'
            >Ã—</span>
            <div class='w3-bar-item'>
              <span class='w3-large'>{{this.username}}</span><br />
              <span>{{this.permission}}</span>
            </div>
          </li>
        {{/data.user_list}}
      </ul>
    </div>
  </body>
</html>