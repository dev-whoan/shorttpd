<html>
  <link
    rel='stylesheet'
    href='https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css'
  />
  <link rel='stylesheet' href='/css/header.css' />
  <link rel='stylesheet' href='/css/login.css' />
  <link rel='stylesheet' href='/css/footer.css' />
  <title>Shorttpd, Simple Web Server</title>
  <script src='/js/util.js'></script>
  <script src='/js/app.js'></script>
  <script src='/js/sha256.js'></script>
  <body>
    <header>
      <h1 onclick="location.href = '/';">Shorttpd, Simple Web Server Serving
        Static Files</h1>
      {{#if logined}}
        <span id='logout' onclick='logout()'>Logout</span>
      {{/if}}
    </header>

    <section id='login-section'>
      <div id='user-login'>
        <p id='id-label'>ID</p>
        <input id='id-value' type='text' />
        <p id='pw-label'>Password</p>
        <input id='pw-value' type='password' />

        <div id='btn-wrapper'>
          <span
            id='btn-cancel'
            class='button'
            onclick="location.href='/';"
          >Cancel</span>
          <span id='btn-login' class='button' onclick='goLogin();'>Login</span>
        </div>
      </div>
    </section>

    <footer>
      <div id='developer'>
        <a href='https://github.com/dev-whoan/shorttpd'><img
            id='github'
            src='/img/github.png'
          /></a>
        <span id='descript'>
          Developed by
          <a href='https://github.com/dev-whoan'>dev-whoan</a></span>

      </div>
    </footer>
  </body>

</html>